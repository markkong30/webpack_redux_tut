{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"esModuleInterop": true,
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["./declaration.d.ts"]
}
